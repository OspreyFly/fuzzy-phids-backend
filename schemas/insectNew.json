{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/companyNew.schema.json",
    "type": "object",
    "properties": {
        "species": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "price": {
            "type": "integer",
            "minimum": 0
        },
        "url_image": {
            "type": "string",
            "format": "uri"
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "handle",
        "description"
    ]
}